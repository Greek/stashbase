{
  "extends": "@stashbase/typescript-config/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["../api/src/*"],
      "@stashbase/ui": ["../../packages/ui"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "prettier.config.js",
    "../api/src/types"
  ],
  "exclude": ["node_modules"]
}
